<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zhangqc.androidfunction.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <Button
            android:text="启动NFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_nfc" />

        <Button
            android:text="CheckPreferAPP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_prefer_app" />

        <TextView
            android:text="preferapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_preferapp" />


        <Button
            android:text="NFCPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_jump_to_nfc" />


        <Button
            android:text="ShowSimcardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_simcard" />

        <Button
            android:text="nfc forground dispatcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nfc_forground_dispatch" />

        <Button
            android:text="query activites which handle nfc action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nfc_handling_query" />


        <Button
            android:text="start moto nfc setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nfc_moto_setup" />


        <Button
            android:text="start lenovo app store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_app_store" />


        <Button
            android:text="start 支付宝"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_alipay" />

        <Button
            android:text="start 微信充值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_weixin" />



        <Button
            android:text="start Pure activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_pure_acitivty" />


        <Button
            android:text="允许未知源安装"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/allow_unknow_source" />

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
